{% extends '@COTUserBundle/Resources/layout.html.twig' %}

{% block body_id 'register' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('@COTUserBundle/Resources/public/js/register.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="globalContainer" class="jumbotron sign-up">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            {{ form_start(form) }}
                            <h2>Create a new account</h2>
                            <p>Whether you sell online, on social media, in store, or out of the trunk of your car,
                                Cottect has you covered.</p>
                            <div class="form-row">
                                <div class="col">
                                    {{ form_row(form.firstName) }}
                                </div>
                                <div class="col">
                                    {{ form_row(form.lastName) }}
                                </div>
                            </div>
                            {{ form_row(form.emailOrPhone) }}
                            {{ form_row(form.plainPassword) }}
                            {{ form_row(form.birthday) }}
                            {{ form_row(form.gender) }}
                            <div class="form-group">
                                <small class="form-text text-muted">By clicking Create
                                    an account, you agree to our <a href="#" id="terms-link" target="_blank"
                                                                    rel="nofollow">Terms</a> and
                                    confirm that you have read our <a href="#" id="privacy-link" target="_blank"
                                                                      rel="nofollow">Data Policy</a>,
                                    including our <a href="#" id="cookie-use-link" target="_blank" rel="nofollow">Cookie
                                        Use Policy</a>. You may receive SMS
                                    message notifications from Cottect and can opt out at any time.
                                </small>
                            </div>
                            <button type="submit" class="btn btn-primary">{{ 'action.register'|trans }}</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
